<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:text="最轻的烫伤，只损害皮肤表层，有局部轻度红肿、无水泡、疼痛明显。"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="48dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="第一级烫伤"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="2dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="二度烫伤"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="64dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="中度烫伤，不但损害表皮，而且也伤及皮肤中层，有水泡，疼痛明显。"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="110dp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="三度烫伤"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="145dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="最严重的烫伤，皮下、脂肪、肌肉都受到损伤，呈灰或红褐色，甚至会变黑变焦，此时由于神经受到损伤，反而可能不觉疼痛。"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="194dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用自来水冲洗伤口，无论是开水烫伤还是蒸汽烫伤，应先降低烫伤皮肤温度，减少烫伤处的进一步损伤，同时用水冲洗也能减少疼痛。如果伤口没有破开，则侵泡10分钟左右。如果伤口处已经破开，就不可再行侵泡，以免感染。如果烫伤面积过大，应把整个身体侵泡在浴缸里。也可使用毛巾沾水敷在不能用水冲洗的部位。"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="246dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="当烫伤处在有衣物覆盖的地方时，不要着急脱掉衣物，以免撕裂烫伤后的水泡，可先行用水冲洗降温，再小心的去掉衣物。"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="347dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="如果烫伤处有水泡，要不要弄破要具体问题具体分析，一般不要弄破，以免留下疤痕，但是有时水泡较大或处在关节处较易破损处的水泡则需用消毒针扎破，如果水泡已经破掉，则需用消毒棉签擦干水泡周围流出的液体。"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="383dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="如果烫伤处有水泡，要不要弄破要具体问题具体分析，一般不要弄破，以免留下疤痕，但是有时水泡较大或处在关节处较易破损处的水泡则需用消毒针扎破，如果水泡已经破掉，则需用消毒棉签擦干水泡周围流出的液体。"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="451dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="烫伤处应避免在阳光下直射，包扎后的伤口不要触水，烫伤的部位也不要过多活动，以免伤口与纱布摩擦，增加伤口的愈合时间。"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="519dp" />
</LinearLayout>